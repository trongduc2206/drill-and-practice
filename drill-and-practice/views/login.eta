<% layout("./layouts/layout.eta") %>

<h1>Login form</h1>

<% if (it.errors && it.errors.length > 0) { %>
<ul>
    <% it.errors.forEach((error) => { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
    <% }); %>
</ul>
<% } %>

<form class="mb-3" method="POST" action="/auth/login">
  <label class="form-label">Email</label>
  <input class="form-control" type="email" name="email" placeholder="example@gmail.com" value="<%= it.email %>"/>
  <label class="form-label">Password</label>
  <input class="form-control" type="password" name="password" placeholder="password" value="<%= it.password %>"/><br/>
  <input class="btn btn-primary" type="submit" value="Login" />
</form>

<a href="/auth/register">Not yet registered? Register here.</a>